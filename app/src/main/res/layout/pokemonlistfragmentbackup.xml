<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".PokemonDetailFragment"
    android:theme="@style/AppTheme">

    <TextView
        android:id="@+id/pokemon_detail_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_marginTop="8dp"
        android:text="Pokemon Detail"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pokemonNameIDView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/pokemonNameTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/pokemonClassificationTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/pokemonDescriptionView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/eggGroupView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp" />

                    <ListView
                        android:id="@+id/typeView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/hiddenAbility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/pokemonImageView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:contentDescription="@drawable/missing"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/malePercentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Male Percentage: "
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/femalePercentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Female Percentage: "
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Height: "
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Weight: "
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/levelUpAttacks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Level-up Moves"/>

            <Button
                android:id="@+id/tmAttacks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Technical Machine Moves"/>

            <Button
                android:id="@+id/eggAttacks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Egg Moves"/>

            <Button
                android:id="@+id/moveTutorAttacks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Move Tutor Moves"/>

            <Button
                android:id="@+id/weaknessesButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weaknesses"/>

            <Button
                android:id="@+id/returnMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"/>

            <TextView
                android:id="@+id/baseHP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                android:text="Base Health: " />

            <TextView
                android:id="@+id/baseAttack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                android:text="Base Attack: " />

            <TextView
                android:id="@+id/baseDefence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                android:text="Base Defence: " />

            <TextView
                android:id="@+id/baseSAttack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                android:text="Base Special Attack: " />

            <TextView
                android:id="@+id/baseSDefence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                android:text="Base Special Defence: " />

            <TextView
                android:id="@+id/baseSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                android:text="Base Speed: " />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
